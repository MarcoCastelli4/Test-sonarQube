<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="4dp"
    android:backgroundTint="@android:color/white"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Fase del torneo e data -->
        <TextView
            android:id="@+id/group_stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group stage: Stage A - 12/06"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center_horizontal"/>

        <!-- Risultato -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center">

            <!-- Squadra 1 -->
            <TextView
                android:id="@+id/team1_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="United Darfo"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="end"
                android:paddingEnd="8dp"/>

            <!-- Punteggio Squadra 1 -->
            <TextView
                android:id="@+id/team1_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingEnd="4dp"/>

            <!-- Separatore "-" -->
            <TextView
                android:id="@+id/separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"/>

            <!-- Punteggio Squadra 2 -->
            <TextView
                android:id="@+id/team2_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingStart="4dp"/>

            <!-- Squadra 2 -->
            <TextView
                android:id="@+id/team2_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="US SanPancrazio"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="start"
                android:paddingStart="8dp"/>
        </LinearLayout>

        <!-- Marcatore Squadra 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/team1_scorer_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Marcatore Squadra 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/team2_scorer_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
