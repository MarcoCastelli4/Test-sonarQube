<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/popup_background">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_close"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="2dp"
            android:src="@drawable/close"/>

        <!-- Name -->
        <TextView
            android:id="@+id/more_league_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="League description"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_below="@id/btn_close"
            android:gravity="center"
            android:textSize="18dp"/>

        <!-- Place -->

        <RelativeLayout
            android:id="@+id/lay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/more_league_description">

            <ImageView
                android:id="@+id/btn_more_address"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/map" />

            <TextView
                android:id="@+id/edt_more_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/btn_more_address"
                android:text="Football pitch address"
                android:layout_centerVertical="true" />
        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/lay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/lay1">

            <ImageView
                android:id="@+id/btn_more_playing_period"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/date_range" />

            <TextView
                android:id="@+id/edt_more_playing_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/btn_more_playing_period"
                android:text="Playing period"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/lay2">

            <ImageView
                android:id="@+id/btn_more_euro"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/euro" />

            <TextView
                android:id="@+id/edt_more_euro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/btn_more_euro"
                android:text="Entry fee"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/lay3">

        <ImageView
            android:id="@+id/btn_first_prize"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/trophy" />

        <TextView
            android:id="@+id/edt_first_prize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btn_first_prize"
            android:text="First prize"
            android:layout_centerVertical="true" />
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/lay4">

            <ImageView
                android:id="@+id/btn_more_info"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/info" />

            <TextView
                android:id="@+id/edt_more_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/btn_more_info"
                android:text="League restrictions"
                android:layout_centerVertical="true" />

        </RelativeLayout>

    <Button
        android:id="@+id/join_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lay5"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Let's play!"
        android:backgroundTint="@color/primary"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
    </RelativeLayout>